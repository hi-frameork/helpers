{
    "name": "hi/helpers",
    "description": "Hi 框架 Helper 组件",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "hi",
        "hi-framework"
    ],
    "authors": [
        {
            "name": "热心网友",
            "email": "anoxia@engineer.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12.68"
    },
    "autoload": {
        "psr-4": {
            "Hi\\Helpers\\": "src/"
        },
        "files": [
            "functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Hi\\Helpers\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpunit": "php ./vendor/bin/phpunit",
        "phpstan": "php ./vendor/bin/phpstan analyse -l 8 ./src"
    }
}
